{% comment %}
    Usage:
    {% render 'sticky-add-btn' %}
{% endcomment %}

{% assign has_options = false %}
{% unless product.has_only_default_variant %}
  {% assign has_options = true %}
{% endunless %}

<script src="{{ 'custom.js' | asset_url }}" defer="defer"></script>

<script>
  window.ds_storage = window.ds_storage || {};
  ds_storage.scrollTop = {{ has_options }};
  ds_storage.selectors = {productForm: 'form[action="/cart/add"]', a2cbtn: ".submit-btn",};
  ds_storage.config = {threshold: 0,removeObserver: false,scrollTop: ds_storage.scrollTop,};
  window.onload = () => {setTimeout(() => {typeof customScripts !== "undefined" &&  new customScripts();}, 1500);};
</script>

<style>
  html {scroll-behavior: smooth;}
  .ds-fixed-btn-wrapper {position: fixed;bottom: 0;left: 0;width: 100%;background: #fff;z-index: 9;box-shadow: 0 0 2px 2px rgba(0,0,0,0.1); padding: 20px; text-align: center; transform: translate3d(0, 100%, 0); transition: 0.2s all;}
  .ds-fixed-btn-wrapper > .submit-btn {max-width: 400px; width: 100%; margin: 0 auto;}
  .ds-fixed-btn-wrapper.isfixed {transform: translate3d(0, 0, 0);}
</style>
