{% comment %} sidecart-content {% endcomment %}
<!--sidecart-content-->


<div class="side-popup-head flex justify-space-between">
  <h2 class="heading mb-0"><a href="{{ routes.cart_update_url }}" style="color: #000;">Cart</a></h2>
  <button type="button" class="button-unstyled cart-toggle cart-close">
    {% render 'icon', icon: "cart-close" %}
  </button>
</div>

{% if cart.item_count > 0 %}
<div class="side-popup-body">
  <div class="cart-items">
    {% for item in cart.items %}
      {% render 'cart-item', item: item %}
    {% endfor %}
  </div>
  <script id="sidecart_data" type="application/json">
    {{ cart | json }}
  </script>
</div>

<div class="side-popup-footer">
  <button type="submit" name="checkout" class="button button-full">
    <span>
      <span class="link-text" data-text="Checkout - {{ cart.items_subtotal_price | money }}">Checkout - {{ cart.items_subtotal_price | money }}</span>
    </span>
  </button>
</div>
{% else %}
<div class="side-popup-body">
  <div class="cart-items cart-empty">
    <p>Your cart is empty.</p>
    <script id="sidecart_data" type="application/json">
      {{ cart | json }}
    </script>
  </div>
</div>
{% endif %}
