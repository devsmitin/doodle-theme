{% comment %} pt-text-with-image {% endcomment %}

{% assign _s = section.settings %}

{% if _s.section_layout == "layout1" %}
  <section class="section-pad bg-darkgreen relative half-side-product-showcase">
    <div class="container">
      <div class="row">
        <div class="col-md-4 offset-md-1">
          <div class="mid-product-showcase-desc">
            <h2 class="heading">{{ _s.title }}</h2>
  
            <p>{{ _s.text }}</p>
  
            <a class="line-button white" href="{{ _s.link_url }}">
              <span class="link-text" data-text="{{ _s.link_text }}">{{ _s.link_text }}</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="half-product-showcase-img">
      {% unless _s.image == blank %}
      {% render 'image-tag', 
        image: _s.image, 
        image_alt: _s.image.alt
      %}  
      {% endunless %}
    </div>
  </section>
{% else %}
  <section class="section-pad half-color-bg relative" style="--bg-color: #dbcaac">
    <div class="container relative">
      <div class="row align-items-center">
        <div class="col-md-5 offset-md-1">
          <a href="{{ _s.link_url | default: "#" }}" aria-label="{{ _s.link_text | default: "#" }}"> 
            {% unless _s.image == blank %}
            {% render 'image-tag', 
              image: _s.image, 
              image_alt: _s.image.alt
            %}
            {% endunless %}
          </a>
        </div>

        <div class="col-md-4 offset-md-1">
          <div class="mid-product-showcase-desc">
            <h2 class="heading">{{ _s.title }}</h2>

            <p>{{ _s.text }}</p>

            <a class="line-button mt-4" href="{{ _s.link_url }}">
              <span class="link-text" data-text="{{ _s.link_text }}">{{ _s.link_text }}</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Text with one image",
  "settings": [
    {
      "type": "select",
      "id": "section_layout",
      "label": "Layout",
      "options": [
        {
          "value": "layout1",
          "label": "Layout 1"
        },
        {
          "value": "layout2",
          "label": "Layout 2"
        }
      ],
      "default": "layout1",
      "info": "[Layout 1](https://prnt.sc/8fkW42N_zWFP), [Layout 2](https://prnt.sc/IbIDqKAebR7X)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Text"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link title",
      "default": "Link title"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link url"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Text with one image"
    }
  ]
}
{% endschema %}

