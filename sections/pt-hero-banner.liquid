{% comment %} pt-hero-banner {% endcomment %}

{% assign _s = section.settings %}


<section class="home-hero-main transparent-header">
  {% unless _s.video_url == blank %}
  <div class="hero-video-overlay">
    <video src="{{ _s.video_url }}" loop autoplay muted playsinline></video>
  </div>
  {% endunless %}

  <div class="single-home-slide">

    {% render 'image-tag', 
      image: _s.image_desktop, 
      image_alt: _s.image_desktop.alt, 
      class_list: "d-none d-md-block" 
    %}

    {% render 'image-tag', 
      image: _s.image_mobile, 
      image_alt: _s.image_mobile.alt, 
      class_list: "d-block d-md-none" 
    %}  
  
    <div class="home-slide-content">
      <div class="container">
        <h2 class="home-slide-title">{{ _s.title }}</h2>

        <a class="line-button white" href="{{ _s.link_url }}">
          <span class="link-text" data-text="{{ _s.link_text }}">{{ _s.link_text }}</span>
        </a>
      </div>
    </div>
  </div>

  <div class="big-marquee-text">{{ _s.animated_text }}</div>

  <div class="container relative">
    <div class="scroll-down-circle">
      <img src="{{ 'scroll-down-circle.svg' | asset_url }}" alt="scroll-down-circle" loading="lazy" height="200" width="200" />

      <svg width="29" height="29" fill="none" viewBox="0 0 29 29">
        <path stroke="#F7F7F2" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.557" d="M14.595.78v27.249M28.22 14.404 14.595 28.03.971 14.404"/>
      </svg>
    </div>
  </div>
  
  <style>
    {% unless _s.text_color == blank or _s.text_color == 'rgba(0,0,0,0)' %}
      .home-hero-main .single-home-slide .home-slide-content .home-slide-title { color: {{ _s.text_color }} }
    {% endunless %}
    {% unless _s.link_color == blank or _s.link_color == 'rgba(0,0,0,0)' %}
    .home-hero-main .single-home-slide .home-slide-content .line-button .link-text:after, 
    .home-hero-main .single-home-slide .home-slide-content .line-button .link-text:before { color: {{ _s.link_color }}; }
    {% endunless %}
  </style>
</section>


{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Title color",
      "info": "Change this to match title color with background"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link title",
      "default": "Link title"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link url"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "info": "Change this to match link color with background"
    },
    {
      "type": "text",
      "id": "animated_text",
      "label": "Animated text"
    },
    {
      "type": "header",
      "content": "Background images and video"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop hero image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile hero image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (optional)",
      "info": "Upload the video in shopify admin settings > files (up to 20 MB) and paste it's link here"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
