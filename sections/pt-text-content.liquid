{% comment %} pt-text-content {% endcomment %}

{% assign _s = section.settings %}


<section class="section-pad bg-lightgrey" style="overflow-x: hidden">
  <div class="container relative">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="abstract-content text-center relative">
          <h2 class="heading">{{ _s.title }}</h2>
          <p>{{ _s.text }}</p>

          <a class="line-button" href="{{ _s.link_url }}">
            <span class="link-text" data-text="{{ _s.link_text }}">{{ _s.link_text }}</span>
          </a>
        </div>
      </div>
    </div>

    {% if _s.image_1 != blank and _s.image_2 != blank and _s.image_3 != blank and _s.image_4 != blank and _s.image_5 != blank %}
    <div class="abstract-product-listing">
      <span class="abstract-product" aria-label="{{ _s.image_1 | split: '/' | last }}">
        {% render 'image-tag', 
          image: _s.image_1, 
          image_alt: _s.image_1.alt, 
        %}
      </span>
      <span class="abstract-product" aria-label="{{ _s.image_2 | split: '/' | last }}">
        {% render 'image-tag', 
          image: _s.image_2, 
          image_alt: _s.image_2.alt, 
        %}
      </span>
      <span class="abstract-product" aria-label="{{ _s.image_5 | split: '/' | last }}">
        {% render 'image-tag', 
          image: _s.image_5, 
          image_alt: _s.image_5.alt, 
        %}
      </span>
      <span class="abstract-product d-none d-md-block" aria-label="{{ _s.image_4 | split: '/' | last }}">
        {% render 'image-tag', 
          image: _s.image_4, 
          image_alt: _s.image_4.alt, 
        %}
      </span>
      <span class="abstract-product d-none d-md-block" aria-label="{{ _s.image_3 | split: '/' | last }}">
        {% render 'image-tag', 
          image: _s.image_3, 
          image_alt: _s.image_3.alt, 
        %}
      </span>
    </div>
    {% endif %}
  </div>
</section>


{% schema %}
{
  "name": "Text with images",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Text"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link title",
      "default": "Link title"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link url"
    },
    {
      "type": "header",
      "content": "Images",
      "info": "Upload all 5 images, from left to right in sequence. If any image missing, no images will be shown."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5"
    }
  ],
  "presets": [
    {
      "name": "Text with images"
    }
  ]
}
{% endschema %}

