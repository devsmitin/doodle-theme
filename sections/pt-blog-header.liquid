{% comment %} pt-blog-header {% endcomment %}

{% assign _s = section.settings %}

{% unless _s.article == blank %}
  <section class="most-recent-blog">
    <div class="most-recent-blog-img cover-image">
      {% render 'image-tag', 
        image: _s.article, 
        image_alt: _s.article.title, 
      %}
    </div>
    <div class="recent-blog-desc-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <div class="recent-blog-desc">
              <a href="{{ _s.article.url }}">
                <h1>{{ _s.article.title }}</h1>
              </a>
  
              {% capture article_excerpt %}
                {%- if _s.article.excerpt.size > 0 -%}
                  {{ _s.article.excerpt | strip_html | truncatewords: 20 }}
                {%- else -%}
                  {{ _s.article.content | strip_html | truncatewords: 20 }}
                {%- endif -%}
              {% endcapture %}
  
              <p>{{ article_excerpt }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endunless %}  


{% schema %}
{
  "name": "Blogs header",
  "settings": [
    {
      "type": "article",
      "id": "article",
      "label": "Featured article"
    }
  ]
}
{% endschema %}
